@{
    ViewData["Title"] = "Skill Map";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Skill Map</h1>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a class="btn btn-link" role="button" asp-controller ="Skills" asp-action="Criar"> Adicionar nova skill</a>
        </div>


        <table class="table .table-striped .table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Skill</th>
                    <th scope="col">Nível</th>
                    <th scope="col">Quero Aprender</th>


                </tr>
            </thead>
            <tbody>

                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Python </td>
                    <td>5</td>
                    <td>
                        <input class="form-check-input" type="checkbox" id="checkboxNoLabel" value="" aria-label="...">
                    </td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a role="button" class="btn btn-primary" asp-controller="Skills" asp-action="Editar">Editar</a>
                            <a class="btn btn-danger" asp-controller="Skills" asp-action="Apagar">Apagar</a>
                        </div>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>